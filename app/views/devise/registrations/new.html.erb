<div ng-app='cs'>
  <div ng-controller='SignUpsCtrl'>
    <div class="authform">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
        <h3>Sign up</h3>
        <%= devise_error_messages! %>
        <div ng-show="signup.step == 'One'">
          <div class="form-group">
            <label>Email<span style='color: red'> *</span></label>
            <%= f.email_field :email, autofocus: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Password<span style='color: red'> *</span></label>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Password Confirmation<span style='color: red'> *</span></label>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
          <btn class='btn btn-success' ng-click="signup.step = 'Two'">Next</btn>
        </div>
        <div ng-show="signup.step == 'Two'">
          <div class="form-group">
            <label>First Name<span style='color: red'> *</span></label>
            <%= f.text_field :first_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Last Name<span style='color: red'> *</span></label>
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Address 1</label>
            <%= f.text_field :address_1, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Address 2</label>
            <%= f.text_field :address_2, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>City</label>
            <%= f.text_field :city, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>State</label>
            <%= f.text_field :state, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Zip</label>
            <%= f.text_field :zip, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Primary Phone Number</span></label>
            <%= f.text_field :primary_phone, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Primary Phone Number Type</span></label>
            <%= f.select :primary_phone_type, ['Home','Cell','Work'], include_blank: true %>
          </div>
          <div class="form-group">
            <label>Secondary Phone Number</label>
            <%= f.text_field :secondary_phone, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Secondary Phone Number Type</label>
            <%= f.select :secondary_phone_type, ['Home','Cell','Work'], include_blank: true%>
          </div>
          <div class="form-group">
            <label>Secondary Email</label>
            <%= f.email_field :secondary_email, class: 'form-control' %>
          </div>
          <btn class='btn btn-danger' ng-click="signup.step = 'One'">Previous</btn>
          <btn class='btn btn-success' ng-click="signup.step = 'Three'">Next</btn>
        </div>
        <div ng-show="signup.step == 'Three'">
          <label>Select Existing Parish</span></label>
          <%= f.select(:parish_id, Parish.all.collect {|p| [p.name, p.id]}, prompt: true) %>
          <br><br>
          <center>
            <p>Is your parish not listed?</p>
            <%= f.submit 'Create New Parish', :class => 'button' %>
          </center>
          <br><br><br><br>
          <btn class='btn btn-danger' ng-click="signup.step = 'Two'">Previous</btn>
          <%= f.submit 'Sign up', :class => 'button right' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
